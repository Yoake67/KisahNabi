                    android:textAlignment="viewStart"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/Nabi6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
