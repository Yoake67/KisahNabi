<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity_Quiz2">

    <LinearLayout
        android:id="@+id/linearLayout_Quiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#0020FF"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_Quiz2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adlam_display"
            android:gravity="center"
            android:padding="10dp"
            android:text="QUIZ"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_Quiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout_Quizvert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E7F3F5"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/Soal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/adlam_display"
                android:text="2. Siapa nama nabi yang menerima wahyu pertama di Gua Hira?"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- RadioGroup untuk menampung semua pilihan jawaban soal 2 -->
            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/opsiA_soal2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="Nabi Musa AS"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/opsiB_soal2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="Nabi Isa AS"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/opsiC_soal2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:text="Nabi Adam AS"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/opsiD_soal2_jawaban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/adlam_display"
                    android:text="Nabi Muhammad SAW"
                    android:textSize="14sp" />
            </RadioGroup>

            <Button
                android:id="@+id/submit2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#F6E3C1"
                android:fontFamily="@font/adlam_display"
                android:text="SUBMIT"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>